<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>mvc.web.servlet.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/addItemToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCartServlet</servlet-name>
        <servlet-class>mvc.web.servlet.UpdateCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCartServlet</servlet-name>
        <url-pattern>/updateCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveCartItemServlet</servlet-name>
        <servlet-class>mvc.web.servlet.RemoveCartItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveCartItemServlet</servlet-name>
        <url-pattern>/removeCartItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartFormServlet</servlet-name>
        <servlet-class>mvc.web.servlet.CartFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartFormServlet</servlet-name>
        <url-pattern>/cartForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginFormServlet</servlet-name>
        <servlet-class>mvc.web.servlet.LoginFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginFormServlet</servlet-name>
        <url-pattern>/loginForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainFormServlet</servlet-name>
        <servlet-class>mvc.web.servlet.MainFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainFormServlet</servlet-name>
        <url-pattern>/mainForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryFormServlet</servlet-name>
        <servlet-class>mvc.web.servlet.CategoryFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryFormServlet</servlet-name>
        <url-pattern>/categoryForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductFormServlet</servlet-name>
        <servlet-class>mvc.web.servlet.ProductFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductFormServlet</servlet-name>
        <url-pattern>/productForm</url-pattern>
    </servlet-mapping>

   
</web-app>