<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>mvc.web.servlet.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/addItemToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyOrderFormServlet</servlet-name>
        <servlet-class>mvc.web.servlet.MyOrderFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyOrderFormServlet</servlet-name>
        <url-pattern>/myOrderForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetailOrderFormServlet</servlet-name>
        <servlet-class>mvc.web.servlet.DetailOrderFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailOrderFormServlet</servlet-name>
        <url-pattern>/orderDetailForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SubmitOrderFormServlet</servlet-name>
        <servlet-class>mvc.web.servlet.SubmitOrderFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitOrderFormServlet</servlet-name>
        <url-pattern>/submitOrderForm</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout> <!-- 设置为30分钟 -->
    </session-config>

        </web-app>